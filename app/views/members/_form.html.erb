<%= form_for(member) do |f| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </div>
  <div class="experiences">
    <table>
      <thead>
        <tr><th><%= label_tag :Skill %></th> <th><%= label_tag :years %></th>
      </thead>
      <tbody>
        <%= fields_for :experiences, Member.new.experiences  :child_index => 'replace_this' do |exf| %>
          <tr>
            <td class="name"><%= exf.object.name  %></td>
            <td>
              <%= exf.text_field :years, :size => 3, :class => "years" %>
              <%= exf.hidden_field :id, :class => "id"  %>
            </td>
          </tr>
        <% end %>
        <%= f.fields_for :experiences do |exf| %>
          <tr>
            <td class="name"><%= exf.object.name  %></td>
            <td>
              <%= exf.text_field :years, :size => 3, :class => "years" %>
              <%= exf.hidden_field :id, :class => "id"  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="field">
      <%= label_tag 'Add a skill' %><br/>
      <%= text_field_tag :new_skill %>
    </div>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
